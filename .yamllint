# yamllint configuration
---
extends: default

ignore: |
  helm/charts/*/templates/**
  helm/charts/*/files/**
  helm/templates/**

rules:
  line-length:
    max: 120
    level: warning
  comments:
    min-spaces-from-content: 1
  comments-indentation: disable
  document-start: disable
  truthy:
    allowed-values: ['true', 'false', 'yes', 'no', 'on', 'off']
  brackets:
    max-spaces-inside: 1
  indentation:
    spaces: 2
    indent-sequences: true
