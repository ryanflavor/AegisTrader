# Docker build proxy configuration (optional)
# Uncomment and set these if you're behind a corporate proxy
# HTTP_PROXY=http://your-proxy:port
# HTTPS_PROXY=http://your-proxy:port
# NO_PROXY=localhost,127.0.0.1,nats,monitor-api,monitor-ui

# Service ports
NATS_CLIENT_PORT=4222
NATS_MONITOR_PORT=8222
API_PORT=8100
UI_PORT=3100

# Service URLs (internal Docker network)
NATS_URL=nats://nats:4222
NEXT_PUBLIC_API_URL=http://monitor-api:8100

# npm registry (for faster builds in China)
NPM_REGISTRY=https://registry.npmmirror.com

# Application settings
LOG_LEVEL=INFO
ENVIRONMENT=development

# Default timeouts
DEPLOYMENT_TIMEOUT=300
HELM_TIMEOUT=10m

# Repository URLs
NATS_HELM_REPO=https://nats-io.github.io/k8s/helm/charts/

# Container configurations
API_CONTAINER_PORT=8100
UI_CONTAINER_PORT=3100
NATS_CONTAINER_PORT=4222

# Default hostnames
DEFAULT_NATS_HOST=localhost
DEFAULT_API_HOST=monitor-api
DEFAULT_UI_HOST=monitor-ui

# Validation settings
PRODUCTION_NATS_HOST_BLACKLIST=localhost,127.0.0.1
